rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to bookmarks collection
    match /bookmarks/{document=**} {
      allow read, write: if true;
    }
    
    // Allow access to gameProgress collection
    match /gameProgress/{document=**} {
      allow read, write: if true;
    }
    
    // Allow access to favorites collection
    match /favorites/{document=**} {
      allow read, write: if true;
    }
  }
}
